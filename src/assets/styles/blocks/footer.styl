.footer
  background-color redColor

.advantages
  margin-top 50px

  .container
    flex-wrap wrap
    padding-bottom 50px
    display flex 
    justify-content space-between
    align-items center
    text-align center
    border-bottom 1px solid rgba(#fff, 0.1)

  &__text
    color #ffffff
    font-family TruenoLt
    font-size 16px
    font-weight 400
    line-height 26px
    padding-top 30px

.information
  margin-top 100px
  
  .container
    flex-wrap wrap
    display flex 
    justify-content space-between
    align-items start
    padding-bottom 100px
    border-bottom 1px solid rgba(#fff, 0.1)

  &__item 
    display flex 
    flex-direction column
  
  &__item:first-child
    padding-right 94px
  
  &__title
    color #ff7373
    font-family TruenoBd
    text-transform uppercase
    font-size 16px
    font-weight 400
    line-height 36px
  
   &__title
    color #ff7373
    font-family TruenoBd
    text-transform uppercase
    font-size 16px
    font-weight 400
    line-height 36px
  
  &__elem
    color #ffffff
    font-family TruenoLt
    font-size 16px
    font-weight 400
    line-height 36px

.small-height,.small-link
  line-height 16px

.inf-email, .inf-map,.inf-phone
  padding-top 15px

.inf-phone
  position relative
  left 75px

  &:after
    position absolute
    content ''
    width 20px
    height 20px
    background url('../images/phone.png') center no-repeat
    top 28px
    left -58px
  
  &:before
    position absolute
    content ''
    width 55px
    height 55px
    background-color #ff7373
    top 10px
    left -75px


.inf-email
  position relative
  left 75px

  &:after
    position absolute
    content ''
    width 20px
    height 14px
    background url('../images/small letter.png') center no-repeat
    top 28px
    left -58px
  
  &:before
    position absolute
    content ''
    width 55px
    height 55px
    background-color #ff7373
    top 10px
    left -75px

.inf-map
  position relative
  left 75px

  &:after
    position absolute
    content ''
    width 20px
    height 20px
    background url('../images/map.png') center no-repeat
    top 28px
    left -58px
  
  &:before
    position absolute
    content ''
    width 55px
    height 55px
    background-color #ff7373
    top 10px
    left -75px
  
.deep-footer
  margin-top 50px
  margin-bottom 50px

  .container
    display flex
    justify-content space-between
    align-items center
   

  &__copy
    color #ffffff
    font-family TruenoLt
    font-size 16px
    font-weight 400
    line-height 36px

  &__social
    display flex
    justify-content center
  
  &__link:not(:last-child)
    padding-right 30px
  
  &__link

    &:hover
        transform scale(1.2)
        transition 0.4s

+below(md-breakpoint)

  .advantages
    
    &__item
      flex-basis 33.33%
      padding-bottom 30px

  .information

    .container
      justify-content center

    &__item
      flex-basis 33.33%

+below(sm-breakpoint)

  .information
  
    &__item
      flex-basis 50%
  
  .deep-footer

    .container
      justify-content center
      flex-wrap wrap

    &__copy,  &__social
      flex-basis 100%
      text-align center
    
    &__copy
      padding-top 20px
      padding-bottom 20px

+below(xs-breakpoint)

  .information
    .container
      padding 0 10px

    &__item
      flex-basis 100%